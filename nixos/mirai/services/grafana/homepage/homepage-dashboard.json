              },
              {
                "id": "max",
                "value": 100
              },
              {
                "id": "min",
                "value": 0
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Memory %"
            },
            "properties": [
              {
                "id": "unit",
